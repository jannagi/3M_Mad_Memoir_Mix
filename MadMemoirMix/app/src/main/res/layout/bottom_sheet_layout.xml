<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:id="@+id/bottomSheetLayout"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/imageNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/imageSizeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageNameTextView"
        android:layout_marginTop="20dp"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/imageFileSizeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/imageSizeTextView"
        android:layout_marginTop="20dp"
        android:padding="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>